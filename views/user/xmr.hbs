

<h1>XMR/BTC</h1>

   
<div class="ticker">
<label>Bitcoin Price:$</label><span id="usdbtc"></span>
</div>

<div id="btc" class="wallet">
<label>Bitcoin Wallet:</label>
</div>

<div id="deposit" class="DepostAddress">
<label>BTC Deposit Address:</label>
</div>
<br>
<div>
<label>XMR Price:$</label><span id="usdxmr"></span>
</div>

<div id="xmrwallet" class= "xmrwallet">

<label>XMR Wallet:</label>
</div>

<div id="xmrdeposit">
<label>XMR Deposit Address:</label>
</div>


<div class= "main-charts">

  
  <div id="chart-contain">
     
  </div>

<div class="buysellform">

  <div>
    <h2 class="buy-selltitle">Buy Monero</h2>
    <form id="xmrbuy" action='/trading/xmrbuy' method='POST'>
    <input type="number" name="rate" id="ratexmr" class='buy-sellinput' placeholder="rate">
    <br><br>
    <input type="number" name="amount" id="amountxmr" class='buy-sellinput' placeholder="amount">
    <br><br>
    <button id="xmrbuybtn" class="buy-btn">Buy XMR</button>
    </form>
  </div>

  <div class='sellbox'>
    <h2 class="buy-selltitle">Sell Monero</h2>
    <form id="ethsell" action='/trading/xmrselling' method='POST'>
    <input type="number" name="rate" id="ratexmrselling" class='buy-sellinput' placeholder="rate">
    <br><br>
    <input type="number" name="amountEth" id="amountxmrselling" class='buy-sellinput' placeholder="amount">
    <br><br>
    <a><button id="xmrsellbtn" class="sell-btn">Sell XMR</button></a>
    </form>
  </div>
  {{#unless currentUser}}
    <div class="auth-form" id="auth-form">
      <div class="block-btns">
        <button  onclick="toggleDropdown()" class="login-btn-block" id='loginblock'>Login</button>
        <form action="/signup" method="GET">
        <button id ="signup-block" class='signup-btn-block'>Signup</button>
        </form>
      </div>
    </div>
    {{/unless}}
  {{#if currentUser}}
    <div class="auth-form hide-form" id="auth-form">
      <div>
        <button onclick="toggleDropdown()" class="login-btn-block">Login</button>
        <button href="/signup" class='signup-btn-block'>Signup</button>
      </div>
    </div>
  {{/if}}  
</div>
</div>

  <script src="/javascripts/monero.js"></script>